<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
   <div class="carousel-item active">
      <%= cl_image_tag equipment.photos.first.key, height: '130px', width:'220px'%>
    </div>
     <% equipment.photos.each do |photo| %>
     <% next if photo == equipment.photos[0] %>
      <div class="carousel-item">
        <%= cl_image_tag photo.key, height: '130px', width:'220px'%>
      </div>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>




<div class="map-image"><%=link_to equipment.name, equipment_path(equipment) %></div>
<p><%= equipment.description %></p>
